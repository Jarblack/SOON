<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"
        android:layout_width="match_parent"
        android:layout_weight="1"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="52dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@android:color/holo_blue_bright"
                android:paddingTop="20dp"
                android:text="Bloque 1"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="30sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingRight="1dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/bloque1" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingRight="1dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/bloque1_1" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingRight="1dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/bloque1_2" />

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingRight="1dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/bloque1_3" />
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Direccion:"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Av Caracas # 37-63"
                android:textColor="@android:color/background_dark"
                android:textSize="20dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="Transporte:"
                android:textColor="@android:color/background_dark"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="La estacion mas cercana de transmilenio es la Av 39 ubicada en la Carrera 14, es el medio de transporte mas utilizado por los estudiantes de esta sede"
                android:textColor="@android:color/background_dark"
                android:textSize="20dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView34"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="Caracteristicas:"
                android:textColor="@android:color/background_dark"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Esta sede cuenta con un total de (N) salones,  una oficina de correspondencia, una de carnetizacion y una biblioteca en el primer piso, tambien podemos encontrar una (sala de radio) en el tercer piso "
                android:textColor="@android:color/background_dark"
                android:textSize="20dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView35"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="Ubicacion:"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Esta sede queda ubicada enfrente de la estacion de la Av39 donde podemos encontrar sitios aledaÃ±os como el edificio de rcn radio, us subway y los bloques 4,16"
                android:textColor="@android:color/background_dark"
                android:textSize="20dp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/ubicarse"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@android:color/holo_green_dark"
                android:text="Mapa"
                android:textColor="@color/common_google_signin_btn_text_dark_default" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
